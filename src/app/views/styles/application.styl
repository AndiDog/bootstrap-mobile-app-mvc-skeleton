$sidebar-width = 72pt
$sidebar-gradient-start = #555
$sidebar-gradient-end = #777

div.sidebar
  position: absolute
  overflow: hidden
  left: 0
  top: 0
  bottom: 0
  width: $sidebar-width
  background: gradient(linear, left top, left bottom, from($sidebar-gradient-start ), to($sidebar-gradient-end))
  background: -webkit-gradient(linear, left top, left bottom, from($sidebar-gradient-start ), to($sidebar-gradient-end))
  border-right: 1px solid gray

div.sidebar-main
  position: absolute
  left: $sidebar-width
  top: 0
  bottom: 0
  right: 0